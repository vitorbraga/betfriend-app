<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/radio_checked" />

            <!--<stroke android:width="1dp" android:color="@color/app_red" />-->
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/app_dark_orange" />

            <!--<stroke android:width="1dp" android:color="@color/app_red" />-->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/radio_unchecked" />

            <!--<stroke android:width="1dp" android:color="@color/app_red" />-->
        </shape>
    </item>

</selector>